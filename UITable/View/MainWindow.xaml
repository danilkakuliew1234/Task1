<Window x:Class="UITable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:UITable.ViewModel"
        xmlns:local="clr-namespace:UITable"
        mc:Ignorable="d"
        Title="MainWindow" Height="230" Width="800">
    <Window.DataContext>
        <viewModel:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <DockPanel VerticalAlignment="Top" Height="200">
            <DataGrid ItemsSource="{Binding Cities}" Width="400"/>
            <DockPanel Margin="20,0,20,0" Width="240">
                <Label Content="Введите название города: " VerticalAlignment="Center" HorizontalAlignment="Center" Padding="0,0,0,0"/>
                <TextBox Text="{Binding CityName, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Padding="0,0,0,0"/>
            </DockPanel>
            <DockPanel>
                <Button Command="{Binding CreateTableCommand}" VerticalAlignment="Center">
                    <TextBlock Text="Создать таблицу из представления" TextWrapping="Wrap"/>
                </Button>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
